
<%= form_with(model: task, url:category_tasks_path(category_id:cat_id)) do |form| %>

<% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <h2 class="text-center"><%= "You're adding a task for #{cat_id.name}" %></h2>

    <div class="flex flex-col gap-5 m-auto items-left form-container container m-6 items-center">

  <br>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

   <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>


 <div style="display:none">
    <%= form.label :category_id, style: "display: block" %>
    <%= form.text_field :category_id, value: cat_id.id%>
  </div>

  
 <div>
    <%= form.date_field  :deadline %>
  </div>

<br>

 <div>
    <%= form.submit "Submit", :class => 'cursor-pointer border-2 p-2 rounded-lg bg-blue-500 text-white text-sm mb-5' %>
  </div>


    <% end %>



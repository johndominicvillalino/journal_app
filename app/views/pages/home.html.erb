


      

      <div class="hero-container">
          <h3>
          Organize your activities
          </h3>
          <p>
          Make writing your daily activities a habit
          </p>

          <%= link_to new_user_registration_path  do %>
          <button class="mt-10 p-10 get-started ">
            Get Started
          </button>
          <% end %>
      </div>


      <div class="login-form-container">
        <div class="login-close">
          <%= image_tag ("back-login.svg"), class: "back-login" %>
            </div>
              <div>
              <%= form_for( resource, as: resource_name, url: session_path(resource_name ) ,data: { turbo: false }) do |form| %>
              <%= notice %>
               <% flash do |z,x| %>
                <%= x %>
                <%= z %>
                <% end %>
                    <form class='login-form'>         
                        <%= image_tag ("login-logo.svg"), class: "login-logo" %>
                          <%= form.text_field :email, placeholder:'Email' %>
                          <%= form.text_field :password,placeholder:'password', type:'password' %>
                        <%= form.submit "Submit", :class => 'login-btn' %>
                    </form>
              <p class="mt-5 ml-3 text-blue-200 hover:text-blue-600 cursor-pointer">Forgot your password?</p>
            </div>
                 <% end %>
            
      </div>


